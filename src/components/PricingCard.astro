---
interface Props {
	title: string;
	price: string;
	period: string;
	description: string;
	features: string[];
	highlighted?: boolean;
	buttonText?: string;
	class?: string;
}

const { 
	title, 
	price, 
	period, 
	description, 
	features, 
	highlighted = false,
	buttonText = "Reservar Ahora",
	class: className = '' 
} = Astro.props;
---

<div class={`relative flex flex-col gap-6 rounded-2xl border bg-white p-8 shadow-sm transition-all hover:shadow-soft hover:border-primary/30 hover:-translate-y-1 ${highlighted ? 'border-primary shadow-soft transform scale-105 z-10' : 'border-gray-100'} ${className}`}>
	{highlighted && (
		<div class="absolute -top-3 left-1/2 -translate-x-1/2 rounded-full bg-primary px-4 py-1 text-xs font-bold text-white shadow-md">
			Más Común
		</div>
	)}
	<div class="flex flex-col gap-2">
		<div class="flex items-center justify-between">
			<h3 class="text-lg font-bold font-serif">{title}</h3>
			{title === "Consulta Inicial" && (
				<span class="rounded-full bg-primary-light px-3 py-1 text-xs font-bold text-primary">Popular</span>
			)}
		</div>
		<div class="flex items-baseline gap-1 mt-2">
			<span class="text-4xl font-medium tracking-tight font-serif">{price}</span>
			<span class="text-text-muted text-sm font-medium">/ {period}</span>
		</div>
		<p class="text-text-muted text-sm font-light mt-1">{description}</p>
	</div>
	
	<hr class="border-gray-100" />
	
	<div class="flex flex-col gap-4">
		{features.map((feature) => (
			<div class="flex items-center gap-3 text-sm text-text-muted">
				<span class="material-symbols-outlined text-primary" style="font-size: 20px;">check_circle</span>
				{feature}
			</div>
		))}
	</div>
	
	<a 
		href="/contact" 
		class={`mt-auto flex w-full cursor-pointer items-center justify-center rounded-lg py-3.5 text-sm font-bold transition-all ${
			highlighted 
				? 'bg-primary text-white hover:bg-primary-dark shadow-md hover:shadow-lg shadow-primary/20' 
				: 'border border-gray-200 bg-white text-text-main hover:border-primary hover:text-primary hover:bg-primary-light/10'
		}`}
	>
		{buttonText}
	</a>
</div>
