---
interface Props {
	number: string;
	title: string;
	description: string;
	approaches: string[];
	duration: string;
	id: string;
	href?: string;
}

const { number, title, description, approaches, duration, id, href = "/contact" } = Astro.props;
---

<div 
	id={id}
	class="group py-12 lg:py-14 border-b border-charcoal/10 hover:bg-warm-white transition-all duration-500 -mx-6 lg:-mx-8 px-6 lg:px-8"
>
	<div class="grid lg:grid-cols-12 gap-6 lg:gap-12 items-start">
		<div class="lg:col-span-1">
			<span class="font-serif text-3xl lg:text-4xl text-sage/30 group-hover:text-sage/50 transition-colors duration-500">
				{number}
			</span>
		</div>
		
		<div class="lg:col-span-7">
			<h2 class="font-serif text-2xl lg:text-3xl text-charcoal mb-3 group-hover:text-sage transition-colors duration-300">
				{title}
			</h2>
			
			<div class="flex items-center gap-2 mb-4">
				<svg class="w-4 h-4 text-sage/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
				</svg>
				<span class="text-sm text-stone/50">{duration}</span>
			</div>
			
			<p class="text-stone/60 leading-relaxed mb-5 max-w-xl font-light">
				{description}
			</p>
			
			<div class="flex flex-wrap gap-2">
				{approaches.map((approach) => (
					<span class="px-3 py-1.5 bg-sage/5 text-sage text-xs font-sans tracking-wide uppercase">
						{approach}
					</span>
				))}
			</div>
		</div>
		
		<div class="lg:col-span-4 lg:text-right">
			<a 
				href={href} 
				class="btn btn-outline inline-flex"
			>
				<span>Contactar</span>
				<svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.25 8.75L21 12m0 0l-3.75 3.25M21 12H3" />
				</svg>
			</a>
		</div>
	</div>
</div>
