---
interface Props {
  label: string;
  title: string;
  highlight: string;
  description: string;
}

const { label, title, highlight, description } = Astro.props;
---

<header class="relative py-24 lg:py-32 bg-charcoal overflow-hidden">
  <div class="absolute inset-0 bg-grain opacity-[0.02]"></div>
  <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-sage/5 to-transparent"></div>
  <div class="absolute top-1/4 left-0 w-[400px] h-[400px] bg-sage/5 rounded-full blur-[120px]"></div>
  
  <div class="relative max-w-6xl mx-auto px-6 lg:px-8">
    <div class="flex items-center gap-4 mb-6">
      <span class="text-[11px] font-sans tracking-[0.3em] uppercase text-sage/60">{label}</span>
      <div class="w-16 h-[1px] bg-gradient-to-l from-transparent to-sage/30"></div>
    </div>
    
    <h1 class="font-serif text-4xl lg:text-6xl text-ivory mb-6 max-w-2xl leading-tight" set:html={`${title} <span class="text-sage italic">${highlight}</span>`}>
    </h1>
    
    <p class="text-lg text-mist/50 max-w-xl font-light leading-relaxed">
      {description}
    </p>
  </div>
</header>
