---
interface Props {
	title: string;
	description?: string;
	variant?: 'light' | 'dark' | 'accent';
	class?: string;
}

const { title, description, variant = 'dark', class: className = '' } = Astro.props;

const variants = {
	light: {
		wrapper: "bg-white border-t border-charcoal/5",
		title: "text-charcoal",
		description: "text-stone",
		primaryBtn: "btn-primary",
		secondaryBtn: "btn-ghost rounded-[var(--radius-md)]"
	},
	dark: {
		wrapper: "bg-charcoal",
		title: "text-ivory",
		description: "text-mist",
		primaryBtn: "btn-secondary",
		secondaryBtn: "bg-transparent text-ivory border border-white/20 rounded-[var(--radius-md)] hover:bg-white/10 hover:border-white/30"
	},
	accent: {
		wrapper: "bg-gradient-to-br from-charcoal via-graphite to-charcoal",
		title: "text-ivory",
		description: "text-mist",
		primaryBtn: "btn-secondary",
		secondaryBtn: "bg-transparent text-ivory border border-white/20 rounded-[var(--radius-md)] hover:bg-white/10 hover:border-white/30"
	}
};

const styles = variants[variant];
---

<section class={`section-y-lg relative overflow-hidden ${styles.wrapper} ${className}`}>
	{variant === 'dark' && (
		<>
			<div class="absolute inset-0 bg-grain opacity-[0.04] pointer-events-none"></div>
			<div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-white/10 to-transparent"></div>
			<div class="absolute -top-40 -right-40 w-80 h-80 bg-gradient-to-bl from-sage/15 to-transparent rounded-full blur-3xl"></div>
			<div class="absolute -bottom-40 -left-40 w-96 h-96 bg-gradient-to-tr from-sage/10 to-transparent rounded-full blur-3xl"></div>
		</>
	)}
	
	{variant === 'light' && (
		<>
			<div class="absolute inset-0 bg-grain pointer-events-none"></div>
			<div class="absolute top-1/2 left-1/2 w-[600px] h-[600px] bg-gradient-to-r from-sage/5 to-transparent rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"></div>
		</>
	)}
	
	{variant === 'accent' && (
		<>
			<div class="absolute inset-0 bg-grain opacity-[0.03] pointer-events-none"></div>
			<div class="absolute top-0 right-0 w-full h-full bg-[radial-gradient(ellipse_at_top_right,_var(--tw-gradient-stops))] from-sage/10 via-transparent to-transparent"></div>
			<div class="absolute bottom-0 left-0 w-full h-full bg-[radial-gradient(ellipse_at_bottom_left,_var(--tw-gradient-stops))] from-sage/5 via-transparent to-transparent"></div>
		</>
	)}
	
	<div class="relative max-w-4xl mx-auto px-6 lg:px-12 text-center">
		<div class="space-y-6 lg:space-y-8">
			<div class="inline-flex items-center gap-3 px-4 py-2 bg-white/5 backdrop-blur-sm rounded-full border border-white/10">
				<span class="material-symbols-outlined text-sage text-sm">favorite</span>
				<span class="font-mono text-[10px] tracking-wider uppercase text-mist">Tu bienestar importa</span>
			</div>
			
			<h2 class={`font-display text-3xl lg:text-4xl xl:text-5xl leading-tight text-balance ${styles.title}`}>
				{title}
			</h2>
			
			{description && (
				<p class={`text-lg lg:text-xl max-w-2xl mx-auto leading-relaxed ${styles.description}`}>
					{description}
				</p>
			)}
			
			<div class="flex flex-col sm:flex-row gap-4 justify-center pt-4">
				<a href="/contact" class={`${styles.primaryBtn} group`}>
					<span>Agendar consulta</span>
					<span class="material-symbols-outlined text-base group-hover:translate-x-1 transition-transform duration-300">arrow_forward</span>
				</a>
				
				<a href="tel:+34912345678" class={`${styles.secondaryBtn} transition-all duration-400 font-body font-medium text-sm tracking-wide py-[0.9375rem] px-[1.875rem] inline-flex items-center justify-center gap-2.5`}>
					<span class="material-symbols-outlined text-base text-sage">call</span>
					<span>+34 912 345 678</span>
				</a>
			</div>
			
			<div class="flex items-center justify-center gap-8 pt-6">
				<div class="flex items-center gap-2 text-sm text-mist">
					<span class="material-symbols-outlined text-sage text-lg">schedule</span>
					<span>Respuesta en 24h</span>
				</div>
				<div class="w-1 h-1 bg-mist rounded-full"></div>
				<div class="flex items-center gap-2 text-sm text-mist">
					<span class="material-symbols-outlined text-sage text-lg">lock</span>
					<span>100% confidencial</span>
				</div>
			</div>
		</div>
	</div>
</section>
