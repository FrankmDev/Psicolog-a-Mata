---
interface Props {
	title: string;
	subtitle?: string;
	align?: 'left' | 'center';
	label?: string;
	class?: string;
}

const { title, subtitle, align = 'center', label, class: className = '' } = Astro.props;

const alignClasses = {
	left: 'text-left',
	center: 'text-center mx-auto'
};
---

<div class={`max-w-3xl mb-16 ${alignClasses[align]} ${className}`}>
	{label && (
		<span class="text-primary font-bold tracking-widest text-xs uppercase mb-3 block">
			{label}
		</span>
	)}
	<h2 class="font-serif text-4xl font-bold mb-4">{title}</h2>
	{subtitle && (
		<p class="text-text-muted text-lg">{subtitle}</p>
	)}
</div>
