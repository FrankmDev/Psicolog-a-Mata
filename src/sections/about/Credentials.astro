---
interface Props {
	title?: string;
	subtitle?: string;
	linkText?: string;
	linkHref?: string;
	credentials?: Array<{
		icon: string;
		title: string;
		subtitle: string;
		description: string;
	}>;
}

const { 
	title = "Cualificaciones y Experiencia",
	subtitle = "Un compromiso con la excelencia académica y el desarrollo profesional continuo.",
	linkText = "Ver CV Completo",
	linkHref = "#",
	credentials = [
		{
			icon: "school",
			title: "Doctorado en Psicología Clínica",
			subtitle: "Universidad de Pensilvania",
			description: "Disertación centrada en intervenciones cognitivo-conductuales para trastornos de ansiedad en adultos jóvenes. Graduada Magna Cum Laude."
		},
		{
			icon: "license",
			title: "Licencia Profesional",
			subtitle: "Junta Estatal de Psicología",
			description: "LPC con licencia completa (#12345) y autorización para ejercer de forma independiente. Adherida a las pautas éticas más estrictas."
		},
		{
			icon: "psychology_alt",
			title: "Especialista en Trauma",
			subtitle: "Intl. Trauma Institute",
			description: "Profesional Clínica de Trauma Certificada (CCTP) especializada en TEPT complejo y recuperación de trauma del desarrollo."
		},
		{
			icon: "groups",
			title: "Miembro de la APA",
			subtitle: "Asociación Americana de Psicología",
			description: "Colaboradora activa en la División 12 (Sociedad de Psicología Clínica), participando en simposios anuales de investigación."
		},
		{
			icon: "menu_book",
			title: "Autora Publicada",
			subtitle: "Journal of Clinical Psychology",
			description: "Autora de 'Resiliencia en Tiempos Modernos' y múltiples artículos revisados por pares sobre estrategias adaptativas de estrés."
		},
		{
			icon: "handshake",
			title: "Defensora Comunitaria",
			subtitle: "Alcance en Salud Mental",
			description: "Voluntaria dedicada y oradora en centros comunitarios locales, promoviendo la alfabetización en salud mental para poblaciones desatendidas."
		}
	]
} = Astro.props;
---

<section class="py-20 md:py-32 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto">
	<div class="flex flex-col md:flex-row md:items-end justify-between gap-6 mb-16 border-b border-gray-100 dark:border-gray-800 pb-8">
		<div>
			<h2 class="text-3xl md:text-4xl font-serif text-text-main dark:text-white mb-4">{title}</h2>
			<p class="text-text-muted dark:text-gray-400 max-w-xl text-lg font-light">
				{subtitle}
			</p>
		</div>
		<div>
			<a class="inline-flex items-center gap-2 text-primary font-medium hover:text-primary-dark transition-colors group" href={linkHref}>
				<span>{linkText}</span>
				<span class="material-symbols-outlined text-sm transition-transform group-hover:translate-x-1">arrow_right_alt</span>
			</a>
		</div>
	</div>
	
	<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
		{credentials.map((credential) => (
			<div class="group bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 border border-gray-100 dark:border-gray-700 relative overflow-hidden">
				<div class="absolute top-0 right-0 w-24 h-24 bg-primary-light/50 rounded-bl-[4rem] -mr-4 -mt-4 transition-transform group-hover:scale-110"></div>
				<div class="relative z-10">
					<div class="size-12 rounded-lg bg-primary/10 flex items-center justify-center text-primary mb-6">
						<span class="material-symbols-outlined">{credential.icon}</span>
					</div>
					<h3 class="font-serif font-bold text-xl text-text-main dark:text-white mb-2">{credential.title}</h3>
					<p class="text-primary text-sm font-semibold uppercase tracking-wide mb-4">{credential.subtitle}</p>
					<p class="text-text-muted dark:text-gray-400 text-sm leading-relaxed">
						{credential.description}
					</p>
				</div>
			</div>
		))}
	</div>
</section>
