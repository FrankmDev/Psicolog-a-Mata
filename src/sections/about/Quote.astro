---
interface Props {
	quote?: string;
	author?: string;
}

const { 
	quote = "La curación auténtica requiere un puerto seguro. Mi objetivo es empoderarlo con las herramientas para comprender su propia mente, libre de juicios.",
	author = "Dra. Sarah Jenkins"
} = Astro.props;
---

<section class="bg-primary-dark py-20 md:py-32 relative overflow-hidden">
	<div class="absolute top-0 left-0 w-full h-full opacity-10 pointer-events-none">
		<svg class="w-full h-full" preserveAspectRatio="none" viewBox="0 0 100 100">
			<path d="M0 100 C 20 0 50 0 100 100 Z" fill="white"></path>
		</svg>
	</div>
	<div class="max-w-[800px] mx-auto px-4 text-center relative z-10">
		<span class="material-symbols-outlined text-5xl text-primary/50 mb-8">format_quote</span>
		<h2 class="text-2xl md:text-3xl lg:text-4xl font-serif text-white leading-relaxed mb-8">
			"{quote}"
		</h2>
		<div class="flex items-center justify-center gap-3">
			<span class="h-px w-12 bg-primary"></span>
			<span class="text-primary-light font-medium tracking-widest uppercase text-sm">{author}</span>
			<span class="h-px w-12 bg-primary"></span>
		</div>
	</div>
</section>
