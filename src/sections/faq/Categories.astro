---
interface Props {
	categories?: string[];
	activeCategory?: number;
}

const { 
	categories = ["General", "Facturación y Seguros", "Proceso de Terapia", "Teleconsulta"],
	activeCategory = 0
} = Astro.props;
---

<nav aria-label="Categorías de Preguntas Frecuentes" class="overflow-x-auto pb-4 -mx-4 px-4 md:mx-0 md:px-0">
	<div class="flex gap-3 min-w-max justify-center md:justify-start">
		{categories.map((category, index) => (
			<button class={`px-5 py-2 rounded-full font-medium text-sm transition-all ${index === activeCategory ? 'bg-primary text-white shadow-sm hover:shadow-md hover:bg-primary-dark' : 'bg-white border border-gray-200 text-text-muted hover:border-primary hover:text-primary hover:bg-primary-light/50'}`}>
				{category}
			</button>
		))}
	</div>
</nav>
