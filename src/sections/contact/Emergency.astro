---
interface Props {
	title?: string;
	description?: string;
}

const { 
	title = "¿Necesitas asistencia inmediata?",
	description = "Si tú o alguien que conoces está en crisis o peligro inmediato, por favor no uses este formulario. Hay ayuda disponible las 24/7."
} = Astro.props;
---

<section class="border-t border-gray-200 dark:border-gray-800 bg-white dark:bg-[#151b1e] py-16">
	<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
		<div class="rounded-3xl bg-red-50 dark:bg-red-900/10 border border-red-100 dark:border-red-900/30 p-8 md:p-12 flex flex-col md:flex-row items-center justify-between gap-8">
			<div class="flex items-start gap-6">
				<div class="hidden sm:flex size-14 shrink-0 items-center justify-center rounded-full bg-red-100 text-red-600 dark:bg-red-900/30 dark:text-red-400">
					<span class="material-symbols-outlined text-3xl">emergency_home</span>
				</div>
				<div>
					<h2 class="text-2xl font-bold text-text-main dark:text-white">{title}</h2>
					<p class="text-text-muted dark:text-gray-400 mt-2 max-w-xl">{description}</p>
				</div>
			</div>
			<div class="flex flex-col sm:flex-row gap-4 w-full md:w-auto">
				<a class="inline-flex items-center justify-center gap-2 rounded-xl bg-red-600 px-8 py-3.5 text-sm font-bold text-white hover:bg-red-700 shadow-md transition-all active:scale-95 whitespace-nowrap" href="tel:988">
					<span class="material-symbols-outlined">call</span>
					Llama al 988
				</a>
				<a class="inline-flex items-center justify-center rounded-xl bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 px-8 py-3.5 text-sm font-bold text-text-main dark:text-white hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors whitespace-nowrap" href="#">
					Recursos de Emergencia
				</a>
			</div>
		</div>
	</div>
</section>
