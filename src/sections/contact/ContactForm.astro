---
interface Props {
	title?: string;
	description?: string;
}

const { 
	title = "Envíanos un Mensaje",
	description = "Nuestro coordinador de admisión generalmente responde dentro de las 24 horas."
} = Astro.props;
---

<div class="rounded-3xl bg-white dark:bg-[#1a2024] p-8 sm:p-12 shadow-soft border border-gray-100 dark:border-gray-800 relative overflow-hidden group">
	<div class="absolute top-0 left-0 w-1 h-full bg-primary opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
	
	<div class="mb-10">
		<h2 class="text-3xl font-bold text-text-main dark:text-white mb-3">{title}</h2>
		<p class="text-text-muted dark:text-gray-400">{description}</p>
	</div>
	
	<form class="space-y-8">
		<div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
			<div class="relative group/input">
				<input class="peer w-full border-b-2 border-gray-200 bg-transparent px-0 py-3 text-text-main placeholder-transparent focus:border-primary focus:outline-none focus:ring-0 dark:border-gray-700 dark:text-white transition-colors" id="name" placeholder="Nombre Completo" required type="text"/>
				<label class="absolute left-0 -top-3.5 text-sm text-text-muted transition-all peer-placeholder-shown:top-3 peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-focus:-top-3.5 peer-focus:text-sm peer-focus:text-primary dark:text-gray-400" for="name">Nombre Completo</label>
			</div>
			<div class="relative group/input">
				<input class="peer w-full border-b-2 border-gray-200 bg-transparent px-0 py-3 text-text-main placeholder-transparent focus:border-primary focus:outline-none focus:ring-0 dark:border-gray-700 dark:text-white transition-colors" id="email" placeholder="Correo Electrónico" required type="email"/>
				<label class="absolute left-0 -top-3.5 text-sm text-text-muted transition-all peer-placeholder-shown:top-3 peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-focus:-top-3.5 peer-focus:text-sm peer-focus:text-primary dark:text-gray-400" for="email">Correo Electrónico</label>
			</div>
		</div>
		
		<div class="relative group/input">
			<select class="peer w-full appearance-none border-b-2 border-gray-200 bg-transparent px-0 py-3 text-text-main focus:border-primary focus:outline-none focus:ring-0 dark:border-gray-700 dark:text-white transition-colors cursor-pointer">
				<option disabled hidden selected value=""></option>
				<option>Consulta General</option>
				<option>Consulta de Nuevo Paciente</option>
				<option>Pregunta sobre Seguros</option>
				<option>Otro</option>
			</select>
			<label class="absolute left-0 -top-3.5 text-sm text-text-muted transition-all peer-focus:text-primary dark:text-gray-400">Asunto</label>
			<div class="pointer-events-none absolute inset-y-0 right-0 flex items-center text-text-muted">
				<span class="material-symbols-outlined text-xl">expand_more</span>
			</div>
		</div>
		
		<div class="relative group/input">
			<textarea class="peer w-full resize-none border-b-2 border-gray-200 bg-transparent px-0 py-3 text-text-main placeholder-transparent focus:border-primary focus:outline-none focus:ring-0 dark:border-gray-700 dark:text-white transition-colors" id="message" placeholder="Mensaje" required rows="4"></textarea>
			<label class="absolute left-0 -top-3.5 text-sm text-text-muted transition-all peer-placeholder-shown:top-3 peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-focus:-top-3.5 peer-focus:text-sm peer-focus:text-primary dark:text-gray-400" for="message">¿Cómo podemos ayudarte?</label>
		</div>
		
		<div class="flex flex-col sm:flex-row items-center justify-between gap-6 pt-4">
			<p class="text-xs text-text-muted dark:text-gray-500 flex items-center gap-1.5 bg-gray-50 dark:bg-gray-800/50 px-3 py-1.5 rounded-full">
				<span class="material-symbols-outlined text-sm text-primary">lock</span>
				Seguro y compatible con HIPAA
			</p>
			<button class="w-full sm:w-auto flex items-center justify-center gap-2 rounded-xl bg-primary px-10 py-4 text-sm font-bold text-white hover:bg-primary-dark focus:ring-4 focus:ring-primary/20 transition-all shadow-glow hover:shadow-lg" type="button">
				Enviar Mensaje
			</button>
		</div>
	</form>
</div>
