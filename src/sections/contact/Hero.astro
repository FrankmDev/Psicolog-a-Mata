---
interface Props {
	title?: string;
	description?: string;
}

const { 
	title = "Comienza Tu Viaje",
	description = "Brindamos un espacio seguro y confidencial para explorar tus pensamientos. Ya sea que tengas preguntas o estés listo para comenzar, estamos aquí para escucharte."
} = Astro.props;
---

<section class="relative overflow-hidden bg-white dark:bg-[#151b1e] pt-16 pb-12 lg:pt-28 lg:pb-24 border-b border-gray-100 dark:border-gray-800">
	<div class="absolute top-0 right-0 -mr-20 -mt-20 size-[600px] rounded-full bg-primary/5 blur-[120px] pointer-events-none"></div>
	<div class="absolute bottom-0 left-0 -ml-20 -mb-20 size-[400px] rounded-full bg-primary/10 blur-[100px] pointer-events-none"></div>
	
	<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 relative z-10 text-center">
		<h1 class="text-4xl font-black tracking-tight text-text-main dark:text-white sm:text-5xl lg:text-7xl mb-6">
			{title}
		</h1>
		<p class="mx-auto max-w-2xl text-lg text-text-muted dark:text-gray-300 leading-relaxed font-light">
			{description}
		</p>
	</div>
</section>
