---
interface MiniFaq {
	question: string;
	answer: string;
}

interface Props {
	title?: string;
	faqs?: MiniFaq[];
}

const { 
	title = "Preguntas Frecuentes",
	faqs = [
		{
			question: "¿Aceptan seguro médico?",
			answer: "Operamos como proveedor fuera de la red para garantizar la más alta calidad de atención personalizada sin limitaciones de seguro. Proporcionamos una factura mensual (Superbill) para que la presentes para reembolso."
		},
		{
			question: "Política de cancelación",
			answer: "Requerimos un aviso de 48 horas para cancelaciones. Esta política asegura que podamos ofrecer los horarios disponibles a otros clientes que puedan necesitar apoyo."
		}
	]
} = Astro.props;
---

<div class="space-y-4 pt-4">
	<h3 class="text-lg font-bold text-text-main dark:text-white px-2">{title}</h3>
	{faqs.map((faq) => (
		<details class="group rounded-2xl bg-white dark:bg-[#1a2024] border border-gray-100 dark:border-gray-800 p-5 [&_summary::-webkit-details-marker]:hidden shadow-sm">
			<summary class="flex cursor-pointer items-center justify-between gap-1.5 text-text-main dark:text-gray-200 font-semibold marker:content-none hover:text-primary transition-colors">
				<span>{faq.question}</span>
				<span class="material-symbols-outlined transition-transform duration-300 group-open:-rotate-180 text-primary">expand_more</span>
			</summary>
			<div class="grid grid-rows-[0fr] transition-all duration-300 group-open:grid-rows-[1fr]">
				<div class="overflow-hidden">
					<p class="mt-4 leading-relaxed text-sm text-text-muted dark:text-gray-400">
						{faq.answer}
					</p>
				</div>
			</div>
		</details>
	))}
</div>
