---
interface Props {
	title?: string;
	description?: string;
	buttonText?: string;
	buttonHref?: string;
}

const { 
	title = "¿Listo para dar el siguiente paso hacia el bienestar?",
	description = "Agendar una consulta es el primer paso para priorizar tu salud mental. Estamos aquí para apoyarte.",
	buttonText = "Agenda tu Consulta Gratuita",
	buttonHref = "/contact"
} = Astro.props;
---

<section class="px-6 py-24 lg:px-10 bg-background-light">
	<div class="mx-auto max-w-4xl overflow-hidden rounded-[2.5rem] bg-primary relative shadow-2xl shadow-primary/20">
		<div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full -translate-y-1/2 translate-x-1/2 blur-2xl"></div>
		<div class="absolute bottom-0 left-0 w-64 h-64 bg-black/10 rounded-full translate-y-1/2 -translate-x-1/2 blur-2xl"></div>
		<div class="relative z-10 flex flex-col items-center gap-8 px-8 py-20 text-center md:px-20">
			<h2 class="text-white max-w-2xl text-4xl font-medium font-serif leading-tight">{title}</h2>
			<p class="text-white/90 max-w-xl text-lg font-light leading-relaxed">
				{description}
			</p>
			<a href={buttonHref} class="mt-4 flex cursor-pointer items-center justify-center rounded-full bg-white px-10 py-4 text-base font-bold text-primary shadow-lg transition-transform hover:scale-105 hover:bg-gray-50">
				{buttonText}
			</a>
		</div>
	</div>
</section>
