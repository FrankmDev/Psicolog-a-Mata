---
import SectionTitle from '../../components/SectionTitle.astro';

interface Service {
	icon: string;
	title: string;
	description: string;
	image: string;
}

interface Props {
	title?: string;
	subtitle?: string;
	label?: string;
	services?: Service[];
}

const { 
	title = "Nuestros Servicios", 
	subtitle = "Ofrecemos una gama de servicios terapéuticos especializados diseñados para encontrarte exactamente donde estás en tu vida con sofisticación y cuidado.",
	label = "Nuestra Experiencia",
	services = [
		{
			icon: "person",
			title: "Terapia Individual",
			description: "Sesiones uno a uno para explorar desafíos personales, ansiedad, depresión y traumas en un espacio seguro y confidencial diseñado para tu sanación.",
			image: "https://images.unsplash.com/photo-1515890435782-59a5bb6e0e48?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
		},
		{
			icon: "diversity_3",
			title: "Terapia de Pareja",
			description: "Fortalece tu vínculo, resuelve conflictos y mejora la comunicación. Proveemos un terreno neutral para navegar juntos las complejidades de la relación.",
			image: "https://images.unsplash.com/photo-1621570160868-80e227a9419b?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
		},
		{
			icon: "devices",
			title: "Terapia Online",
			description: "Apoyo profesional desde la comodidad y privacidad de tu hogar. Nuestras sesiones de video seguras hacen que la terapia sea accesible en cualquier lugar.",
			image: "https://images.unsplash.com/photo-1593642532400-2682810df593?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
		},
		{
			icon: "child_care",
			title: "Infantil y Adolescente",
			description: "Apoyando mentes jóvenes a través de desafíos del desarrollo, ansiedad escolar y regulación emocional con técnicas terapéuticas apropiadas para su edad.",
			image: "https://images.unsplash.com/photo-1503454537195-1dcabb73ffb9?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
		},
		{
			icon: "groups",
			title: "Terapia Grupal",
			description: "Encuentra fortaleza en la experiencia compartida. Nuestros grupos facilitados se enfocan en temas como el duelo, la recuperación de adicciones y el mindfulness.",
			image: "https://images.unsplash.com/photo-1529156069898-49953e39b3ac?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
		},
		{
			icon: "psychology_alt",
			title: "Terapia EMDR",
			description: "La Desensibilización y Reprocesamiento por Movimientos Oculares es un enfoque especializado para procesar recuerdos traumáticos y reducir el malestar.",
			image: "https://images.unsplash.com/photo-1544367563-12123d8965cd?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
		}
	]
} = Astro.props;
---

<section id="servicios" class="bg-white px-6 py-24 lg:px-10 relative">
	<div class="absolute left-0 top-1/2 -z-10 h-96 w-96 -translate-y-1/2 rounded-full bg-primary/5 blur-[100px]"></div>
	
	<div class="mx-auto max-w-7xl">
		<SectionTitle title={title} subtitle={subtitle} label={label} />
		
		<div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
			{services.map((service) => (
				<div class="group relative flex h-[420px] flex-col justify-end overflow-hidden rounded-2xl border border-gray-100 bg-white shadow-sm transition-all duration-500 hover:-translate-y-2 hover:shadow-soft hover:border-primary/30">
					<div class="absolute inset-0 z-0 h-full w-full bg-cover bg-center transition-transform duration-700 group-hover:scale-110" style={`background-image: url('${service.image}')`}></div>
					<div class="absolute inset-0 z-10 bg-gradient-to-t from-text-main/80 via-text-main/30 to-transparent opacity-90 group-hover:opacity-90 transition-opacity duration-300"></div>
					<div class="relative z-20 flex flex-col gap-4 p-8">
						<div class="flex items-center gap-3">
							<div class="flex h-10 w-10 items-center justify-center rounded-full bg-white/20 backdrop-blur-md text-white transition-colors group-hover:bg-primary group-hover:text-white">
								<span class="material-symbols-outlined text-xl">{service.icon}</span>
							</div>
							<h3 class="text-white text-2xl font-medium font-serif tracking-tight">{service.title}</h3>
						</div>
						<div class="h-[1px] w-12 bg-primary/60 transition-all duration-300 group-hover:w-full group-hover:bg-primary"></div>
						<p class="text-gray-200 text-sm leading-relaxed opacity-0 transform translate-y-4 transition-all duration-500 group-hover:opacity-100 group-hover:translate-y-0 delay-75">
							{service.description}
						</p>
						<a class="mt-2 flex w-fit items-center gap-2 text-xs font-bold uppercase tracking-widest text-white hover:text-primary-light transition-colors opacity-0 transform translate-y-4 group-hover:opacity-100 group-hover:translate-y-0 delay-100" href="/contact">
							Leer más 
							<span class="material-symbols-outlined text-base">arrow_forward</span>
						</a>
					</div>
				</div>
			))}
		</div>
	</div>
</section>
