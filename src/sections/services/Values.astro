---
interface Value {
	icon: string;
	title: string;
	description: string;
}

interface Props {
	values?: Value[];
}

const { 
	values = [
		{
			icon: "verified_user",
			title: "Basado en Evidencia",
			description: "Nuestros métodos están fundamentados en investigación científica y eficacia clínica comprobada para resultados reales."
		},
		{
			icon: "favorite",
			title: "Compasivo",
			description: "Creemos que la sanación ocurre en el contexto de una relación cálida, sin juicios y profundamente humana."
		},
		{
			icon: "lock",
			title: "Confidencial",
			description: "Tu privacidad es nuestra máxima prioridad. Nos adherimos estrictamente a los estándares de confidencialidad HIPAA."
		}
	]
} = Astro.props;
---

<section class="bg-white border-y border-gray-100 px-6 py-20 lg:px-10">
	<div class="mx-auto grid max-w-7xl gap-12 md:grid-cols-3">
		{values.map((value) => (
			<div class="flex flex-col items-center text-center">
				<div class="mb-6 rounded-full bg-primary-light p-5 text-primary shadow-sm">
					<span class="material-symbols-outlined text-3xl">{value.icon}</span>
				</div>
				<h3 class="mb-3 text-xl font-bold text-text-main font-serif">{value.title}</h3>
				<p class="text-sm text-text-muted leading-relaxed font-light">{value.description}</p>
			</div>
		))}
	</div>
</section>
