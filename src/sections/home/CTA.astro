---
interface Props {
	title?: string;
	description?: string;
	class?: string;
}

const { 
	title = "Da el primer paso hacia tu bienestar", 
	description = "No tienes que hacerlo solo. Reserva una primera sesión de valoración y descubre cómo podemos ayudarte.",
	class: className = ''
} = Astro.props;
---

<section class={`relative py-32 lg:py-48 overflow-hidden bg-charcoal ${className}`}>
	<div class="absolute inset-0 bg-grain opacity-[0.02]"></div>
	
	<div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-sage/40 to-transparent"></div>
	<div class="absolute bottom-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-sage/40 to-transparent"></div>
	
	<div class="absolute top-1/2 left-1/2 -translate-x-translate-y-11/2 -/2 w-[800px] h-[800px] bg-sage/10 rounded-full blur-[180px]"></div>
	
	<div class="absolute top-10 left-10 w-px h-32 bg-gradient-to-b from-sage/0 via-sage/30 to-sage/0 hidden lg:block"></div>
	<div class="absolute top-20 left-20 w-px h-48 bg-gradient-to-b from-sage/0 via-sage/20 to-sage/0 hidden lg:block"></div>
	<div class="absolute bottom-10 right-10 w-px h-32 bg-gradient-to-b from-sage/0 via-sage/30 to-sage/0 hidden lg:block"></div>
	<div class="absolute bottom-20 right-20 w-px h-48 bg-gradient-to-b from-sage/0 via-sage/20 to-sage/0 hidden lg:block"></div>
	
	<div class="relative max-w-4xl mx-auto px-6 lg:px-12 text-center">
		<div class="mb-4">
			<div class="inline-flex items-center gap-3 px-6 py-3 border border-sage/20">
				<div class="w-2 h-2 rounded-full bg-sage animate-pulse"></div>
				<span class="text-[11px] font-mono tracking-[0.2em] uppercase text-sage/60">Tu bienestar importa</span>
			</div>
		</div>
		
		<h2 class="font-display text-4xl lg:text-6xl xl:text-7xl leading-[0.95] tracking-[-0.03em] text-ivory mb-8">
			{title}
		</h2>
		
		<p class="text-lg lg:text-xl text-mist/50 max-w-xl mx-auto leading-relaxed font-light mb-12">
			{description}
		</p>
		
		<div class="flex flex-col sm:flex-row gap-4 justify-center mb-16">
			<a 
				href="/contact" 
				class="group inline-flex items-center justify-center gap-3 bg-sage text-ivory px-10 py-5 text-base font-medium transition-all duration-500 hover:bg-sage-dark"
			>
				<span>Agendar consulta</span>
				<svg class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.25 8.75L21 12m0 0l-3.75 3.25M21 12H3" />
				</svg>
			</a>
			
			<a 
				href="tel:+34661471971" 
				class="group inline-flex items-center justify-center gap-3 text-ivory text-base font-medium px-10 py-5 border border-ivory/20 transition-all duration-500 hover:bg-ivory/5"
			>
				<svg class="w-5 h-5 text-sage/60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
				</svg>
				<span>661 471 971</span>
			</a>
		</div>
		
		<div class="flex flex-wrap justify-center gap-8 lg:gap-12">
			<div class="flex items-center gap-3 text-sm text-mist/40">
				<svg class="w5 text-sage/40-5 h-" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
				</svg>
				<span>Respuesta en 24h</span>
			</div>
			<div class="w-px h-4 bg-white/[0.1]"></div>
			<div class="flex items-center gap-3 text-sm text-mist/40">
				<svg class="w-5 h-5 text-sage/40" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
				</svg>
				<span>100% confidencial</span>
			</div>
		</div>
	</div>
</section>
