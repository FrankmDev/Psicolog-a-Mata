---
interface Props {
	title?: string;
	testimonials?: Array<{
		quote: string;
		author: string;
		role?: string;
	}>;
}

const { 
	title = "Lo que dicen quienes han pasado por aquí",
	testimonials = [
		{
			quote: "Gracias a la cercanía y profesionalidad de María Ángeles, he encontrado el apoyo que necesitaba para superar mis dificultades. Un trato humano que marca la diferencia.",
			author: "Ana G.",
			role: "Terapia individual"
		},
		{
			quote: "La terapia de pareja nos ha ayudado a comunicarnos mejor y a entender lo que cada uno necesitaba. Recomendado totalmente.",
			author: "Carlos y Elena",
			role: "Terapia de pareja"
		},
		{
			quote: "Un enfoque práctico y cercano. Me sentí escuchada desde el primer día y con herramientas reales para aplicar en mi día a día.",
			author: "Laura M.",
			role: "Ansiedad y estrés"
		}
	]
} = Astro.props;
---

<section class="relative py-32 lg:py-48 bg-charcoal overflow-hidden" id="testimonios">
	<div class="absolute inset-0 bg-grain opacity-[0.015]"></div>
	
	<div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-sage/30 to-transparent"></div>
	
	<div class="absolute top-1/3 left-1/4 w-[400px] h-[400px] bg-sage/5 rounded-full blur-[120px]"></div>
	<div class="absolute bottom-1/3 right-1/4 w-[500px] h-[500px] bg-sage/5 rounded-full blur-[120px]"></div>
	
	<div class="relative max-w-7xl mx-auto px-6 lg:px-12">
		<div class="mb-20 lg:mb-28 text-center">
			<span class="text-[11px] font-mono tracking-[0.3em] uppercase text-sage/50 block mb-6">Testimonios</span>
			<h2 class="font-display text-4xl lg:text-6xl xl:text-7xl leading-[0.95] tracking-[-0.02em] text-ivory max-w-3xl mx-auto">
				{title}
			</h2>
		</div>
		
		<div class="grid lg:grid-cols-3 gap-px bg-white/[0.05]">
			{testimonials.map((testimonial, index) => (
				<div class={`group relative bg-charcoal p-10 lg:p-14 ${index === 1 ? 'lg:py-16' : ''}`}>
					<div class="absolute top-8 left-8 font-display text-8xl text-sage/10 leading-none">"</div>
					
					<div class="relative">
						<svg class="w-8 h-8 text-sage/40 mb-8" fill="currentColor" viewBox="0 0 24 24">
							<path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
						</svg>
						
						<blockquote class="font-display text-xl lg:text-2xl text-ivory/90 leading-relaxed mb-10 font-light">
							{testimonial.quote}
						</blockquote>
						
						<div class="flex items-center gap-4">
							<div class="w-12 h-12 bg-sage/10 flex items-center justify-center">
								<span class="font-display text-xl text-sage italic">{testimonial.author.charAt(0)}</span>
							</div>
							<div>
								<p class="text-ivory font-medium">{testimonial.author}</p>
								<p class="text-sm text-mist/40">{testimonial.role}</p>
							</div>
						</div>
					</div>
				</div>
			))}
		</div>
	</div>
</section>
