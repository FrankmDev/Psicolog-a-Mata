---
import FAQItem from '../../components/FAQItem.astro';
import { faqs } from '../../data/faqs';
---

<section class="section-padding bg-cream relative overflow-hidden" id="faqs">
  <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-sage/[0.02] rounded-full blur-[150px]"></div>
  <div class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-accent-secondary/[0.03] rounded-full blur-[100px]"></div>
  
  <div class="container-elegant relative z-10">
    <div class="max-w-3xl mx-auto">
      <div class="text-center mb-16">
        <div class="flex items-center justify-center gap-4 mb-6">
          <div class="w-12 h-[1px] bg-sage/50"></div>
          <span class="eyebrow !mb-0">Preguntas frecuentes</span>
          <div class="w-12 h-[1px] bg-sage/50"></div>
        </div>
        
        <h2 class="font-serif text-4xl lg:text-5xl text-charcoal leading-tight">
          Resolvemos tus <span class="text-sage italic">dudas</span>
        </h2>
      </div>
      
      <div class="space-y-3">
        {faqs.map((faq, index) => (
          <FAQItem question={faq.question} index={index}>
            {faq.answer}
          </FAQItem>
        ))}
      </div>
      
      <div class="mt-16 text-center">
        <p class="text-text-secondary mb-6">Â¿Tienes otra pregunta?</p>
        <a 
          href="/contact" 
          class="btn btn-outline inline-flex items-center gap-3"
        >
          <span>Contacta conmigo</span>
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.25 8.75L21 12m0 0l-3.75 3.25M21 12H3" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
