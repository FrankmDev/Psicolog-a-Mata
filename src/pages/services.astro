---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ServiceCard from '../components/ServiceCard.astro';
import PageHeader from '../components/PageHeader.astro';
import { allServices } from '../data/services';

const title = "Servicios de Psicología en Córdoba | Terapia Individual, Pareja y Familiar";
const description = "Servicios profesionales de psicología en Córdoba: terapia individual, de pareja, familiar, evaluación neuropsicológica y estimulación cognitiva. Atención presencial y online.";
---

<Layout 
  title={title}
  description={description}
  type="website"
>
  <Header activePage="Servicios" />
  
  <main id="main-content" role="main">
    <PageHeader
      label="Servicios"
      title="Servicios de"
      highlight="psicología"
      description="Terapia individual, de pareja y familiar en Córdoba. Atención presencial, online y a domicilio."
    />

    <section class="section-padding bg-ivory" aria-labelledby="services-heading">
      <div class="max-w-6xl mx-auto px-6 lg:px-8">
        <h2 id="services-heading" class="sr-only">Nuestros servicios</h2>
        <div class="space-y-0">
          {allServices.map((service, index) => (
            <ServiceCard {...service} />
          ))}
        </div>
      </div>
    </section>

    <section class="section-padding bg-sage relative overflow-hidden" aria-labelledby="cta-heading">
      <div class="absolute inset-0 bg-grain opacity-[0.03]"></div>
      
      <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-ivory/20 to-transparent"></div>
      <div class="absolute bottom-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-ivory/20 to-transparent"></div>
      
      <div class="relative max-w-3xl mx-auto px-6 lg:px-8 text-center">
        <div class="mb-8">
          <div class="inline-flex items-center gap-3 px-5 py-2.5 border border-ivory/20 rounded-full">
            <div class="w-1.5 h-1.5 rounded-full bg-ivory animate-pulse" aria-hidden="true"></div>
            <span class="text-[10px] font-sans tracking-[0.15em] uppercase text-ivory/70">Sin compromiso</span>
          </div>
        </div>
        
        <h2 id="cta-heading" class="font-serif text-3xl lg:text-4xl text-ivory mb-4">
          ¿No sabes qué servicio necesitas?
        </h2>
        <p class="text-ivory/70 max-w-md mx-auto leading-relaxed mb-10 font-light">
          En la primera consulta valoramos tu situación y te recomiendo el enfoque más adecuado.
        </p>
        <a 
          href="/contact" 
          class="inline-flex items-center justify-center gap-3 bg-ivory text-charcoal px-10 py-4 text-sm font-medium hover:bg-warm-white transition-all duration-300 rounded-full hover-lift"
          aria-label="Solicitar consulta sin compromiso"
        >
          <span>Pedir consulta</span>
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.25 8.75L21 12m0 0l-3.75 3.25M21 12H3" />
          </svg>
        </a>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>
