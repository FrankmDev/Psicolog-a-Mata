---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ContactCard from '../components/ContactCard.astro';

const title = "Contacto | María Ángeles Mata - Psicóloga en Córdoba";
const description = "Contacta con María Ángeles Mata, psicóloga en Córdoba. Reserva tu primera consulta por teléfono, email o formulario. Respuesta en menos de 24 horas.";
---

<Layout 
  title={title}
  description={description}
  type="website"
>
  <Header activePage="Contacto" />
  
  <main id="main-content" role="main">
    <section class="section-padding bg-ivory relative overflow-hidden" aria-labelledby="contact-heading">
      <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-sage/[0.03] rounded-full blur-[150px]" aria-hidden="true"></div>
      <div class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-accent-secondary/[0.03] rounded-full blur-[100px]" aria-hidden="true"></div>
      
      <div class="container-elegant relative z-10">
        <div class="grid lg:grid-cols-2 gap-16 lg:gap-20">
          
          <div>
            <div class="flex items-center gap-4 mb-6">
              <div class="w-12 h-[1px] bg-sage/50" aria-hidden="true"></div>
              <span class="text-[11px] font-sans tracking-[0.3em] uppercase text-sage/70">Contacto</span>
            </div>
            
            <h1 id="contact-heading" class="font-serif text-4xl lg:text-5xl xl:text-6xl text-charcoal mb-6 leading-[1.1]">
              Hablemos de <span class="text-sage italic">ti</span>
            </h1>
            
            <p class="text-lg text-stone/60 leading-relaxed mb-12 max-w-md font-light">
              Estoy aquí para escucharte. El primer paso hacia el bienestar comienza con una conversación.
            </p>
            
            <div class="space-y-4 mb-10" role="list" aria-label="Información de contacto">
              <div role="listitem">
                <ContactCard 
                  href="tel:+34661471971"
                  label="Teléfono"
                  value="661 471 971"
                  icon="phone"
                />
              </div>
              
              <div role="listitem">
                <ContactCard 
                  href="mailto:mangelesmatacala@hotmail.com"
                  label="Email"
                  value="Respuesta en 24h"
                  icon="email"
                />
              </div>
              
              <div role="listitem">
                <ContactCard 
                  label="Ubicación"
                  value="C/ Rodríguez Sánchez, 14003 Córdoba"
                  icon="location"
                />
              </div>
            </div>
            
            <div class="flex items-center gap-3 text-sm text-stone/50">
              <div class="w-2 h-2 rounded-full bg-sage animate-pulse" aria-hidden="true"></div>
              <span>Presencial · Online · A domicilio</span>
            </div>
          </div>
          
          <div class="bg-bg-surface border border-border-light rounded-2xl p-8 lg:p-10 shadow-card">
            <div class="mb-8">
              <h2 class="font-serif text-2xl text-charcoal mb-2">Envíame un mensaje</h2>
              <p class="text-sm text-stone/50">Te responderé en menos de 24 horas</p>
            </div>
            
            <form class="space-y-5" action="#" method="POST" aria-label="Formulario de contacto">
              <div class="grid sm:grid-cols-2 gap-5">
                <div>
                  <label for="nombre" class="block text-[10px] font-sans uppercase tracking-[0.12em] text-stone/40 mb-2">Nombre</label>
                  <input 
                    type="text" 
                    id="nombre"
                    name="nombre"
                    placeholder="Tu nombre"
                    class="w-full px-4 py-3.5 bg-bg-base border border-border-light text-charcoal placeholder:text-stone/30 focus:outline-none focus:border-sage/40 text-sm transition-all rounded-lg"
                    required
                    autocomplete="name"
                  />
                </div>
                <div>
                  <label for="telefono" class="block text-[10px] font-sans uppercase tracking-[0.12em] text-stone/40 mb-2">Teléfono</label>
                  <input 
                    type="tel" 
                    id="telefono"
                    name="telefono"
                    placeholder="+34..."
                    class="w-full px-4 py-3.5 bg-bg-base border border-border-light text-charcoal placeholder:text-stone/30 focus:outline-none focus:border-sage/40 text-sm transition-all rounded-lg"
                    autocomplete="tel"
                  />
                </div>
              </div>
              
              <div>
                <label for="email" class="block text-[10px] font-sans uppercase tracking-[0.12em] text-stone/40 mb-2">Email</label>
                <input 
                  type="email" 
                  id="email"
                  name="email"
                  placeholder="tu@email.com"
                  class="w-full px-4 py-3.5 bg-bg-base border border-border-light text-charcoal placeholder:text-stone/30 focus:outline-none focus:border-sage/40 text-sm transition-all rounded-lg"
                  required
                  autocomplete="email"
                />
              </div>
              
              <div>
                <label for="servicio" class="block text-[10px] font-sans uppercase tracking-[0.12em] text-stone/40 mb-2">Servicio</label>
                <select 
                  id="servicio"
                  name="servicio"
                  class="w-full px-4 py-3.5 bg-bg-base border border-border-light text-charcoal focus:outline-none focus:border-sage/40 text-sm appearance-none cursor-pointer transition-all rounded-lg"
                  style="background-image: url('data:image/svg+xml,%3Csvg xmlns=%27http://www.w3.org/2000/svg%27 fill=%27none%27 viewBox=%270 0 24 24%27 stroke=%278B9088%27%3E%3Cpath stroke-linecap=%27round%27 stroke-linejoin=%27round%27 stroke-width=%272%27 d=%27M19 9l-7 7-7-7%27/%3E%3C/svg%3E'); background-repeat: no-repeat; background-position: right 12px center; background-size: 16px; padding-right: 40px;"
                >
                  <option value="">Selecciona un servicio</option>
                  <option>Terapia individual</option>
                  <option>Terapia de pareja</option>
                  <option>Terapia familiar</option>
                  <option>Evaluación neuropsicológica</option>
                  <option>Estimulación cognitiva</option>
                  <option>Otra consulta</option>
                </select>
              </div>
              
              <div>
                <label for="mensaje" class="block text-[10px] font-sans uppercase tracking-[0.12em] text-stone/40 mb-2">Mensaje</label>
                <textarea 
                  id="mensaje"
                  name="mensaje"
                  placeholder="Cuéntame cómo puedo ayudarte..."
                  rows="4"
                  class="w-full px-4 py-3.5 bg-bg-base border border-border-light text-charcoal placeholder:text-stone/30 focus:outline-none focus:border-sage/40 text-sm resize-none transition-all rounded-lg"
                  required
                ></textarea>
              </div>
              
              <button 
                type="submit" 
                class="w-full group flex items-center justify-center gap-3 btn btn-primary"
                aria-label="Enviar mensaje de contacto"
              >
                <span>Enviar mensaje</span>
                <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.25 8.75L21 12m0 0l-3.75 3.25M21 12H3" />
                </svg>
              </button>
              
              <p class="text-xs text-stone/40 text-center">
                Al enviar este formulario, aceptas nuestra política de privacidad.
              </p>
            </form>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>
