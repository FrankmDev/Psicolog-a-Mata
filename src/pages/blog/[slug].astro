---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { blogPosts, getPostBySlug } from '../../data/blog';

export function getStaticPaths() {
  return Object.keys(blogPosts).map(slug => ({ params: { slug } }));
}

const { slug } = Astro.params;
const post = getPostBySlug(slug as string);

if (!post) {
  return Astro.redirect('/404');
}

const title = `${post.title} | María Ángeles Mata`;
const description = post.excerpt;
const image = post.image;
---

<Layout 
  title={title}
  description={description}
  image={image}
  type="article"
>
  <Header activePage="Blog" />
  
  <main id="main-content" role="main">
    <article itemscope itemtype="https://schema.org/BlogPosting">
      <meta itemprop="headline" content={post.title} />
      <meta itemprop="description" content={post.excerpt} />
      <meta itemprop="datePublished" content={post.date} />
      <meta itemprop="author" content="María Ángeles Mata" />
      <meta itemprop="publisher" content="María Ángeles Mata" />
      
      <header class="relative py-24 lg:py-32 bg-charcoal overflow-hidden">
        <div class="absolute inset-0 bg-grain opacity-[0.02]"></div>
        <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-sage/5 to-transparent"></div>
        
        <div class="relative max-w-4xl mx-auto px-6 lg:px-8">
          <nav aria-label="Breadcrumb" class="mb-8">
            <ol class="flex items-center gap-2 text-sm text-sage/60">
              <li>
                <a href="/" class="hover:text-sage transition-colors">Inicio</a>
              </li>
              <li aria-hidden="true">/</li>
              <li>
                <a href="/blog" class="hover:text-sage transition-colors">Blog</a>
              </li>
              <li aria-hidden="true">/</li>
              <li aria-current="page" class="text-sage/80">{post.category}</li>
            </ol>
          </nav>
          
          <div class="flex items-center gap-3 mb-6">
            <span class="text-[10px] font-sans tracking-[0.15em] uppercase text-sage/70 px-3 py-1 bg-sage/10 rounded-full">
              {post.category}
            </span>
            <span class="text-[12px] text-mist/40">{post.date}</span>
            <span class="text-[12px] text-mist/40">· {post.readTime} lectura</span>
          </div>
          
          <h1 class="font-serif text-4xl lg:text-5xl xl:text-6xl text-ivory mb-6 leading-[1.1]" itemprop="name">
            {post.title}
          </h1>
          
          <p class="text-lg text-mist/50 max-w-2xl font-light leading-relaxed">
            {post.excerpt}
          </p>
        </div>
      </header>
      
      <div class="relative">
        <div class="aspect-[21/9] overflow-hidden">
          <img 
            src={post.image} 
            alt={post.title}
            class="w-full h-full object-cover"
            itemprop="image"
            width="1200"
            height="514"
          />
        </div>
      </div>
      
      <div class="section-padding bg-ivory">
        <div class="max-w-2xl mx-auto px-6 lg:px-8">
          <div 
            class="prose prose-lg prose-slate prose-headings:font-serif prose-headings:text-charcoal prose-p:text-stone/70 prose-p:leading-relaxed prose-a:text-sage prose-strong:text-charcoal prose-li:text-stone/70"
            itemprop="articleBody"
            set:html={post.content}
          >
          </div>
          
          <div class="mt-16 pt-8 border-t border-border-light">
            <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-6">
              <div>
                <p class="text-sm text-stone/50 mb-2">¿Te ha resultado útil este artículo?</p>
                <a href="/contact" class="btn btn-primary py-2.5 px-6 text-sm" aria-label="Reservar consulta de psicología">
                  <span>Reservar consulta</span>
                </a>
              </div>
              
              <a href="/blog" class="text-sm text-sage hover:text-sage-dark transition-colors flex items-center gap-2 group">
                <svg class="w-4 h-4 rotate-180 transition-transform group-hover:-translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.25 8.75L21 12m0 0l-3.75 3.25M21 12H3" />
                </svg>
                <span>Más artículos</span>
              </a>
            </div>
          </div>
          
          <!-- Share buttons -->
          <div class="mt-12 pt-8 border-t border-border-light">
            <p class="text-sm text-stone/50 mb-4">Compartir artículo</p>
            <div class="flex items-center gap-4">
              <a 
                href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.title)}&url=${encodeURIComponent(`https://psicologamata.es/blog/${post.slug}`)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 rounded-full bg-bg-muted flex items-center justify-center text-stone/60 hover:text-sage hover:bg-sage/10 transition-all"
                aria-label="Compartir en Twitter"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </a>
              <a 
                href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(`https://psicologamata.es/blog/${post.slug}`)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 rounded-full bg-bg-muted flex items-center justify-center text-stone/60 hover:text-sage hover:bg-sage/10 transition-all"
                aria-label="Compartir en Facebook"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
              <a 
                href={`https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(`https://psicologamata.es/blog/${post.slug}`)}&title=${encodeURIComponent(post.title)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 rounded-full bg-bg-muted flex items-center justify-center text-stone/60 hover:text-sage hover:bg-sage/10 transition-all"
                aria-label="Compartir en LinkedIn"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </article>
  </main>
  
  <Footer />
</Layout>
