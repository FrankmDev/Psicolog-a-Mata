---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: string;
}

const {
  title,
  description = "María Ángeles Mata — Psicóloga General Sanitaria en Córdoba. Terapia individual, de pareja y familiar.",
  image = "/og-image.jpg",
  type = "website",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site || "https://psicologamata.es");

// Schema.org
const schemaOrg = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  name: "María Ángeles Mata - Psicóloga Clínica",
  description,
  url: "https://psicologamata.es",
  telephone: "+34661471971",
  email: "mangelesmatacala@hotmail.com",
  address: {
    "@type": "PostalAddress",
    streetAddress: "C/ Rodríguez Sánchez",
    addressLocality: "Córdoba",
    postalCode: "14003",
    addressCountry: "ES"
  }
};
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site || "https://psicologamata.es")} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Lora:ital,wght@0,400;0,500;0,600;1,400;1,500&display=swap" rel="stylesheet" />
    
    <!-- Schema -->
    <script type="application/ld+json" set:html={JSON.stringify(schemaOrg)} />
    
    <style is:inline>
      @media (prefers-reduced-motion: reduce) {
        *, *::before, *::after {
          animation-duration: 0.01ms !important;
          transition-duration: 0.01ms !important;
        }
      }
    </style>
  </head>
  
  <body class="bg-bg-base text-text-primary antialiased">
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-text-primary focus:text-bg-base focus:rounded-lg text-sm">
      Saltar al contenido
    </a>
    
    <slot />
    
    <!-- Scroll Progress -->
    <div id="scroll-progress" class="fixed top-0 left-0 h-0.5 bg-sage z-50 origin-left scale-x-0 transition-transform"></div>
    
    <script is:inline>
      const progress = document.getElementById('scroll-progress');
      window.addEventListener('scroll', () => {
        const scrollTop = window.scrollY;
        const docHeight = document.documentElement.scrollHeight - window.innerHeight;
        progress.style.transform = `scaleX(${scrollTop / docHeight})`;
      }, { passive: true });
    </script>
  </body>
</html>
